# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASS=your_password
DB_NAME=qr_attendance_app

# Authentication
BETTER_AUTH_SECRET=your_secret_key

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Application
BASE_URL=http://localhost:3000

# Email Configuration (Multiple Provider Support)
# Choose your preferred email method:

# Method 1: Auto-detect provider (Recommended)
# Just set your email and password - system will auto-detect Gmail/Outlook/Yahoo
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME="QR Attendance System"

# Method 2: Specific Provider Configuration
# Uncomment the provider you want to use:

# Gmail Configuration
# SMTP_PROVIDER=gmail
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Outlook/Hotmail Configuration
# SMTP_PROVIDER=outlook
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@outlook.com
# SMTP_PASS=your_password

# Yahoo Configuration
# SMTP_PROVIDER=yahoo
# SMTP_HOST=smtp.mail.yahoo.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@yahoo.com
# SMTP_PASS=your_app_password

# Custom SMTP Configuration
# SMTP_PROVIDER=custom
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@yourdomain.com
# SMTP_PASS=your_password

# Cron Job Security
CRON_SECRET=your_cron_secret_key

# Email Testing (Optional - for development only)
# Set to 'true' to log emails to console instead of sending
EMAIL_DEBUG=false